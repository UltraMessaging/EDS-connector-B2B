<?xml version="1.0" encoding="UTF-8"?>
<tns:vdsPlugin xmlns:tns="http://www.informatica.com/VdsPlugin"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.informatica.com/VdsPlugin vds_plugin.xsd ">

    <tns:id>VDS_SRC_KAFKA_X</tns:id>
    <tns:displayName>KafkaX</tns:displayName><tns:version>2.3.2.1</tns:version>
    
    <tns:type>SOURCE</tns:type>

    <tns:configuration>
        <tns:fields>
            <tns:field>
                <tns:textControl>
                    <tns:name>kafkaDestination</tns:name>
                    <tns:displayName>Kafka Destination</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>localhost:9092</tns:default>
<!--                        <tns:placeholder>&lt;localhost:9092&gt; 
                        </tns:placeholder>-->

                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>topic</tns:name>
                    <tns:displayName>Topic</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure> 
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>groupId</tns:name>
                    <tns:displayName>group.id</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure> 
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>autoCommit</tns:name>
                    <tns:displayName>enable.auto.commit</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>true</tns:default>
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>commitInterval</tns:name>
                    <tns:displayName>auto.commit.interval.ms</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>1000</tns:default>
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>sessionTimeout</tns:name>
                    <tns:displayName>session.timeout.ms</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>30000</tns:default>
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>keyDeserializer</tns:name>
                    <tns:displayName>key.deserializer</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>org.apache.kafka.common.serialization.StringDeserializer</tns:default>
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>
            <tns:field>
                <tns:textControl>
                    <tns:name>valueDeserializer</tns:name>
                    <tns:displayName>value.deserializer</tns:displayName>
                    <tns:mandatory>true</tns:mandatory>
                    <tns:stringTextField>
                        <tns:secure>false</tns:secure>
                        <tns:default>org.apache.kafka.common.serialization.StringDeserializer</tns:default>
                    </tns:stringTextField>
                </tns:textControl>
            </tns:field>         
        </tns:fields>
    </tns:configuration>
    
    <tns:runTime>
        <tns:pluginJar>KafkaXvdssrc.jar</tns:pluginJar>
        <tns:pluginClass>com.informatica.binge.source.kafkax.KafkaXSource</tns:pluginClass>
    </tns:runTime>
    <tns:helpKey>kafka_source_properties</tns:helpKey>
</tns:vdsPlugin>